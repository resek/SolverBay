<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="description" content="Quickly brainstrom your R&amp;D problem with global audience">
    <link rel="stylesheet" type="text/css" href="/stylesheets/normalize.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/style.css">    
    <title>ideaCrowd</title>

    <!-- favicons generetad at realfavicongenerator.net -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png.">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
    <link rel="manifest" href="/favicons/manifest.json">
    <link rel="mask-icon" href="/resource/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="/resource/favicon.ico">
    <meta name="msapplication-config" content="/favicons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">
</head>
<body>

    <!-- HEADER  -->
    <header class="homeHeader">
        <nav class="rowCSS">
            <a href="/"><img class="logoWhite" src="/images/logoWhite.png" alt="logoWhite"></a>
            <ul class="homeNavbar">                
                <li><a href="#">Log in</a></li>
                <li><a href="#">Sign up</a></li>
            </ul> 
        </nav>

        <div class="headerText">            
            <h1>Quickly brainstrom your R&amp;D problem with global audience</h1>
            <a class="btn btnFull" href="/challenges/new">Post a challenge</a>
            <a class="btn btnGhost" href="#">Become a solver</a>
        </div>
    </header>

    <!-- SECTION ACTIVE CHALLENGES  -->
    <section class="activeChallenges">        
        <div class="rowCSS">
            <h2>Check active challanges</h2>
        </div>

        <div class="container">           
            <div class="row">
                <% for(var i = 0; i < 4; i++) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="challengesBox">
                            <h3><%= challenges[i].title %></h3>
                            <hr>
                            <div>
                                <p><%= challenges[i].description.substring(0, 48) %>...</p>
                                <p><b>PRIZE: <%= challenges[i].prize %>â‚¬</b></p>
                                <p><b>END DATE: <%= challenges[i].date %></b></p>
                            </div>                        
                            <hr>
                            <a class="btn btnFull" href="/challenges/<%= challenges[i]._id %>">Solve it</a>
                        </div>
                    </div>
                <% }; %>                                
            </div>
        </div>        
    </section>

    <!-- SECTION HOW IT WORKS  -->
    <section class="sectionHowWorks">            
        <div class="rowCSS">
            <h2>How it works</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-sm-6 howItWorks">
                    <h3></p>Asker</h3>
                    <div>
                        <i class="fa fa-rocket fa-4x" aria-hidden="true"></i>
                        <p>Have a problem while developing your product?</p>
                    </div>
                    <div>
                        <i class="fa fa-users fa-4x" aria-hidden="true"></i>
                        <p>Ask smart people around the world</p>
                    </div>
                    <div>
                        <i class="fa fa-thumbs-o-up fa-4x" aria-hidden="true"></i>
                        <p>Get many solutions and confirm the best one</p>
                    </div>
                </div>

                <div class="col-sm-6 howItWorks">
                    <h3>Solver</h3>
                    <div>
                        <i class="fa fa-book fa-4x" aria-hidden="true"></i>
                        <p>Do you have special tehnical knowledge?</p>
                    </div>
                    <div>
                        <i class="fa fa-pencil-square-o fa-4x" aria-hidden="true"></i>
                        <p>Give a solution to problems and compete with others</p>
                    </div>
                    <div>
                        <i class="fa fa-money fa-4x" aria-hidden="true"></i>
                        <p>Win a competition and get the prize</p>
                    </div>            
                </div>
            </div>
        </div>
    </section>

    <!-- FOOTER  -->
    <footer>
        <div class="container">
            <div class="row">
                
                <div class="col-sm-6">
                    <ul class="footer-nav">
                        <li><a href="#">About us</a></li>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Press</a></li>
                    </ul>
                </div>
                
                <div class="col-sm-6">
                    <ul class="social-links">
                        <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                    </ul>
                </div>

            </div>
            
            <div class="rowCSS">
                <p>Copyright &copy; 2017 by ideaCrowd. All rights reserved.</p>    
            </div>
        </div>            
    </footer>
    
</body>
</html>