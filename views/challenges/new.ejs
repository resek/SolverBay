<% include ../partials/header %>

<div class="rowCSS">
    <h2>Post a new challenge</h2>
</div>

<div class ="rowCSS">
    <form id="newForm" action="/challenges" method="POST">
        <div>
            <label for="challengeTitle">Challenge title</label>
            <input type="text" name="title" placeholder="Type challenge title..." id="challengeTitle"></input>
        </div>
        <div>
            <label for="challengeDescription">Description</label>
            <textarea rows="10" name="description" placeholder="Tell your story..." id="challengeDescription"></textarea>
        </div>
        <div>
            <input type="submit" class="btn btnFull"></input>
        </div>
    </form>
</div>

<% include ../partials/footer %>

