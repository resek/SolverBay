<% include ../partials/header %>

<div class ="rowCSS">
    <form id="newForm" action="/challenges/<%= foundChallenge._id %>?_method=PUT" method="POST">
        <div>
            <label for="challengeTitle">Challenge title</label>
            <input type="text" name="title" value="<%= foundChallenge.title %>" id="challengeTitle" maxlength="62" required></input>
        </div>
        <div>
            <label for="challengeDescription">Description</label>
            <textarea rows="10" name="description" id="challengeDescription" required><%= foundChallenge.description %></textarea>
        </div>
        <div>
            <label for="challengePrize">Choose you prize in â‚¬</label>
            <input type="number" name="prize" id="challengePrize" min="10" value="10" required></input>
        </div>
        <div>
            <label for="challengeDate">Select an end date</label>
            <input type="date" name="date" id="challengeDate" required></input>
        </div>
        <div>
            <input type="submit" class="btn btnFull"></input>
        </div>
    </form>
</div>

<% include ../partials/footer %>