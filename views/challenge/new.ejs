<% include ../partials/header %>

<div class ="rowCSS newChallenge">
    <form id="newForm" action="/challenges" method="POST">
        <div>
            <label for="challengeTitle">Title</label>
            <input type="text" name="title" placeholder="Type challenge title..." id="challengeTitle" maxlength="62" required></input>
        </div>
        <div>
            <label for="challengeField">Challenge field</label>
            <input type="text" name="field" placeholder="e.g. thermal engineering" id="challengeField" maxlength="62" required></input>
        </div>
        <div>
            <label for="challengeDescription">Description<span class="challengeExplanations"> (max 1200 characters)</span></label>
            <textarea rows="12" name="description" placeholder="Describe your challenge and what are you trying to achive. Better instructions, better solutions..." id="challengeDescription" maxlength="1200" required></textarea>
        </div>
        <div>
            <label for="challengeDateInput">Finish date<span class="challengeExplanations"> (max 30 days)</span></label>           
            <input type="date" name="date" id="challengeDateInput" min='2000-13-13' max='2000-13-13' required></input>
        </div>
        <div>
            <label for="challengePrize">Prize you offer for best solution<span class="challengeExplanations"> (10 â‚¬/$ or more)</span></label>
            <input type="number" name="prize" id="challengePrize" min="10" value="10" required></input>
            <select name="currency">
                <option value="EUR">EUR</option>
                <option value="USD">USD</option>
            </select>
            <img src="https://www.paypalobjects.com/webstatic/en_US/i/buttons/cc-badges-ppmcvdam.png" alt="Credit Card Badges">
        </div>        
        <div>
            <input type="submit" class="btn btnFull" value="Confirm"></input>
        </div>
    </form>
</div>

<% include ../partials/footer %>

